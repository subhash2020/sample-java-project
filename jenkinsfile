pipeline{
    agent any
    stages{
        stage("checkout"){
            steps{
                sh 'checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/subhash2020/jenkinspipeline.git']]])'
            }
        }

        stage("build"){
            steps{
                sh 'mvn install'
            }
        }

        stage("build"){
            steps{
                sh " archiveArtifacts artifacts: '**/*.war', followSymlinks: false"
            }
        }
    }

    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}
